# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mytutor_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Server Configuration
PORT=3001
NODE_ENV=development

# Email Configuration (for verification and password reset)
EMAIL="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Frontend URLs (for CORS and redirects)
CLIENT_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# Payment Gateway Configuration (SSL Commerz)
STORE_ID="your-store-id"
STORE_PASSWORD="your-store-password"

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=3600000  # 1 hour in milliseconds
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH="./logs"

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (for production session management)
# REDIS_URL="redis://localhost:6379"

# Production URLs (uncomment for production)
# CLIENT_URL="https://your-frontend-domain.com"
# FRONTEND_URL="https://your-frontend-domain.com"
